# Archivo: home/.htaccess
RewriteEngine On

# Permitir acceso directo a archivos PHP que existan
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^.*\.php$ - [L]

# Si el archivo existe (cualquier tipo), mostrarlo
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Si el directorio existe, mostrarlo
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Solo si NO existe el archivo, redirigir a index.php
RewriteRule ^(.*)$ index.php [L,QSA]